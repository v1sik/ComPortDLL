unit ComPortLib;

interface

uses
  Winapi.Windows, Vcl.Forms;

procedure ShowComPortSettings(ParentHandle: HWND); stdcall;

implementation

uses
  PortSettingsForm; // Форма, которую мы показываем

procedure ShowComPortSettings(ParentHandle: HWND); stdcall;
begin
  Application.Handle := ParentHandle;

  with TFormComSettings.Create(nil) do
  try
    ShowModal;
  finally
    Free;
  end;
end;

end.

